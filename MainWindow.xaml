<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Local_Password_Generator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Local_Password_Generator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Local Password Generator">

    <StackPanel x:Name="rootPanel" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button x:Name="generatePassword" Click="button_generatePassword">Generate Password</Button>

        <TextBlock x:Name="pwTextBlock"
           Text="TestPassword123"
           Width="400"
           IsTextSelectionEnabled="True"
           Visibility="Collapsed"/>

    </StackPanel>


</Window>
