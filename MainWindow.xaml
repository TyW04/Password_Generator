<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Local_Password_Generator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Local_Password_Generator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Local Password Generator">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Password setting controls -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,50">
            <CheckBox x:Name="symbolsCheckbox"              
                      Content="No Symbols"/>

            <CheckBox x:Name="numbersCheckbox"
                      Content="No Numbers"/>

            <CheckBox x:Name="uppercaseOnlyCheckbox"
                      Content="Uppercase Only"/>

            <CheckBox x:Name="lowercaseOnlyCheckbox"
                      Content="Lowercase Only"/>    
        </StackPanel>
        
        <!-- Slider bar for password length -->
        <StackPanel Grid.Row="1" Width="300" Margin="0,-30,0,0">
            <Slider x:Name="passwordLengthSlider"
                    Minimum="8"
                    Maximum="64"                
                    TickPlacement="None"
                    ValueChanged="lengthSlider_ValueChanged"/>


            <TextBlock x:Name="currentLength"
                       HorizontalAlignment="Center"
                       Text="Length: 16"/>
        </StackPanel>

        <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,80,0,20">

            <!-- Button to activate password generation -->
            <Button x:Name="generatePassword" 
                    Click="button_generatePassword"     
                    HorizontalAlignment="Center"
                    >Generate Password
            </Button>

        </StackPanel>

        <StackPanel Grid.Row="3" HorizontalAlignment="Center">
           
            <!-- White box for password text to be displayed in -->
            <Border x:Name="pwTextBorder" Width="300" Height="50" Background="White" HorizontalAlignment="Center">
                <!-- Password text -->
                <TextBlock x:Name="pwTextBlock"
                           Text="TestPassword123"                           
                           IsTextSelectionEnabled="True"
                           Visibility="Collapsed"
                           Margin="0,0,0,0"
                           Foreground="Black"
                           HorizontalTextAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>            
        </StackPanel>

        <StackPanel Grid.Row="4" HorizontalAlignment="Center">
            <!-- Copy password button -->
            <Button x:Name="copyPassword"
                    Margin="0,20,0,0"
                    Click="button_copyPasswordClipboard"
                    HorizontalAlignment="Center"
                    >Copy to Clipboard
            </Button>
        </StackPanel>

    </Grid>

</Window>
