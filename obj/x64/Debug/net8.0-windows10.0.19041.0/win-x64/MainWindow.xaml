<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Local_Password_Generator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Local_Password_Generator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Local Password Generator">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <!-- Password setting controls -->
        <StackPanel HorizontalAlignment="Center">
            <CheckBox x:ConnectionId='6' x:Name="symbolsCheckbox"              
                      Content="No Symbols"
                      Margin="0,100,0,0"/>

            <CheckBox x:ConnectionId='7' x:Name="numbersCheckbox"
                      Content="No Numbers"
                      />

            <CheckBox x:ConnectionId='8' x:Name="uppercaseOnlyCheckbox"
                      Content="Uppercase Only"
                      />

            <CheckBox x:ConnectionId='9' x:Name="lowercaseOnlyCheckbox"
                      Content="Lowercase Only"
                      />    
        </StackPanel>
        
        <!-- Slider bar for password length -->
        <StackPanel Grid.Row="2" Width="300" Margin="0,-100">
            <Slider x:ConnectionId='4' x:Name="passwordLengthSlider"
                    Minimum="8"
                    Maximum="64"                
                    TickPlacement="None"
                                                            />
                    
            
            <TextBlock x:ConnectionId='5' x:Name="currentLength"
                       Margin="125,0,0,10"
                       Text="Length: 16"/>
        </StackPanel>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- Button to activate password generation -->
            <Button x:ConnectionId='2' x:Name="generatePassword" 
                                                   
                    Margin="0,0,0,150"
                    HorizontalAlignment="Center">Generate Password </Button>

            
            <!-- Password text -->
            <TextBlock x:ConnectionId='3' x:Name="pwTextBlock"
                       Width="300"
                       IsTextSelectionEnabled="True"
                       Visibility="Collapsed"                   
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>

</Window>

